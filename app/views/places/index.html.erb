<h1>Places</h1>

<% if @current_user %>
  <div class="p-2 bg-light border">
  <ul class="list-group">
    <% for place in @places %>
      <li class="list-group-item"><a href="/places/<%= place["id"] %>"><%= place["name"] %></a></li>
    <% end %>
</ul>

<p>
  <a class="btn btn-primary" href="/places/new" role="button">New Place</a>
</p>
<% else %>
  You must first <a href="/login">login</a> to post.
<% end %>



