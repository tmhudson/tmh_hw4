<h2>New Post</h2>

<% if @current_user %>
    <%= form_with :model => @post do |form| %>
      <%= form.hidden_field "place_id" %>
      <p>
        <%= form.label "title" %>
        <%= form.text_field "title" %>
      </p>
      <p>
        <%= form.label "description" %>
        <%= form.text_field "description" %>
      </p>
      <p>
        <%= form.label "posted_on" %>
        <%= form.date_field "posted_on" %>
      </p>
      <p>
        <%= form.submit %>
      </p>
    <% end %>
  <% else%>
    You must first <a href="/login">login</a> to post.
<% end %>
