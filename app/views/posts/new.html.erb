<h2>New Post</h2>

<% if @current_user %>
<%= form_with :model => @post do |form| %>
     
  <%= form.hidden_field "place_id" %>
  <div class="mb-3">
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </div>
  <div class="mb-3">
    <%= form.label "description" %>
    <%= form.text_field "description" %>
  </div>
  <div class="mb-3">
    <%= form.label "posted_on" %>
    <%= form.date_field "posted_on" %>
</div>
<div class="mb-3">
	<%= form.label "uploaded_image", :class => "form-label" %>
	 <%= form.file_field "uploaded_image", :class => "form-control" %>
 </div>

  <%= form.submit "Create Post", class: "btn btn-primary" %>
<% end %>
<% else %>
  You must first <a href="/login">login</a> to post.
<% end %>
